{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod",
				".git/"
			],
			"filetypes": ["go"]
		}
	},
	"vetur.format.options.tabSize": 4,
	"vetur.format.options.useTabs": true,
	"vetur.format.defaultFormatterOptions": {
		"prettier": {
			"singleQuote": true,
			"semi": false,
			"trailingComma": "es5",
			"printWidth": 120,
			"arrowParens": "always",
			"htmlWhitespaceSensitivity": "strict"
		}
	},
	"css.validate": false
}
